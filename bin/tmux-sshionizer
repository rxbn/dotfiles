#!/usr/bin/env bash

source "${HOME}/personal/dotfiles/work/config/zsh/work_env"

function select_server() {
  local hosts=()

  hosts+=("$(ggrep -Eho '[[:space:]]((en?|pr?|in?|te?|de?|re?|vp?)-[-A-Za-z0-9]+)[[:space:]]?' "${WORK_HOSTS_1}" "${WORK_HOSTS_2}")")
  hosts+=("${WORK_JUMPHOST}")
  hosts+=("$(yq '.prod.hosts | keys[]' ~/personal/playbook-upgrade-servers/hosts.yml)")

  printf "%s\n" "${hosts[@]}" | tr -d ' \t' | sort -u | fzf
}

if [[ $# -eq 1 ]]; then
  selected_server=$1
elif [[ $# -eq 2 ]]; then
  selected_server=$1
else
  selected_server=$(select_server)
fi

if [[ -z $selected_server ]]; then
  exit 0
fi

session_name=$(basename "$selected_server" | tr . _)

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
  tmux new-session -s "$session_name" ssh "$selected_server"
  exit 0
fi

if ! tmux has-session -t="$session_name" 2>/dev/null; then
  tmux new-session -ds "$session_name" ssh "$selected_server"
fi

if [[ -z $TMUX ]]; then
  tmux attach-session -t "$session_name"
else
  tmux switch-client -t "$session_name"
fi
