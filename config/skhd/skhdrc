# open terminal
alt - return         : open-iterm
alt + shift - return : open-safari

# change focus
alt - h : yabai -m window --focus west || $(yabai -m display west; yabai -m display --focus west)
alt - j : yabai -m window --focus south || $(yabai -m display south; yabai -m display --focus south)
alt - k : yabai -m window --focus north || $(yabai -m display north; yabai -m display --focus north)
alt - l : yabai -m window --focus east || $(yabai -m display east; yabai -m display --focus east)

# cycle through stack windows
alt - p : yabai -m window --focus stack.prev || yabai -m window --focus north
alt - n : yabai -m window --focus stack.next || yabai -m window --focus south

# shift window in current workspace
alt + shift - h : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west && sketchybar --trigger windows_on_spaces)
alt + shift - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south && sketchybar --trigger windows_on_spaces)
alt + shift - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north && sketchybar --trigger windows_on_spaces)
alt + shift - l : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east && sketchybar --trigger windows_on_spaces)

# set insertion point in focused container
alt + ctrl - h : yabai -m window --insert west
alt + ctrl - j : yabai -m window --insert south
alt + ctrl - k : yabai -m window --insert north
alt + ctrl - l : yabai -m window --insert east

# go back to previous workspace (kind of like back_and_forth in i3)
alt - b : yabai -m space --focus recent

# move focused window to previous workspace
alt + shift - b : yabai -m window --space recent; \
                  yabai -m space --focus recent

# move focused window to next/prev workspace
alt + shift - 1 : yabai -m window --space 1 && sketchybar --trigger windows_on_spaces
alt + shift - 2 : yabai -m window --space 2 && sketchybar --trigger windows_on_spaces
alt + shift - 3 : yabai -m window --space 3 && sketchybar --trigger windows_on_spaces
alt + shift - 4 : yabai -m window --space 4 && sketchybar --trigger windows_on_spaces
alt + shift - 5 : yabai -m window --space 5 && sketchybar --trigger windows_on_spaces
alt + shift - 6 : yabai -m window --space 6 && sketchybar --trigger windows_on_spaces
alt + shift - 7 : yabai -m window --space 7 && sketchybar --trigger windows_on_spaces
alt + shift - 8 : yabai -m window --space 8 && sketchybar --trigger windows_on_spaces
alt + shift - 9 : yabai -m window --space 9 && sketchybar --trigger windows_on_spaces

# # mirror tree y-axis
alt + shift - y : yabai -m space --mirror y-axis

# # mirror tree x-axis
alt + shift - x : yabai -m space --mirror x-axis

# balance size of windows
alt + shift - 0 : yabai -m space --balance

# change window size
alt + shift - a : yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0
alt + shift - s : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:100
alt + shift - w : yabai -m window --resize bottom:0:-100 || yabai -m window --resize top:0:-100
alt + shift - d : yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0

# change layout of desktop
alt - e : yabai -m space --layout bsp; sketchybar --trigger window_focus
alt - s : yabai -m space --layout stack; sketchybar --trigger window_focus

alt - space         : yabai -m window --toggle sticky; yabai -m window --toggle topmost; sketchybar --trigger windows_on_spaces
alt + shift - space : yabai -m window --toggle float; sketchybar --trigger window_focus

# make floating window fill screen
alt + cmd - up     : yabai -m window --grid 1:1:0:0:1:1

# make floating window fill left-half of screen
alt + cmd - left   : yabai -m window --grid 1:2:0:0:1:1

# make floating window fill right-half of screen
alt + cmd - right  : yabai -m window --grid 1:2:1:0:1:1

# close focused window
alt - w : yabai -m window --close

# enter fullscreen mode for the focused container
alt - f : yabai -m window --toggle zoom-fullscreen; sketchybar --trigger window_focus

# toggle window native fullscreen
alt + shift - f : yabai -m window --toggle native-fullscreen

# focus monitor
alt + ctrl - x  : yabai -m display --focus recent
alt + ctrl - z  : yabai -m display --focus prev
alt + ctrl - c  : yabai -m display --focus next
alt + ctrl - 1  : yabai -m display --focus 1
alt + ctrl - 2  : yabai -m display --focus 2
alt + ctrl - 3  : yabai -m display --focus 3

# focus space
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9
